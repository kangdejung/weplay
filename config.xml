<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dungzi.weplay" version="1" android-versionCode="1" xmlns="http://www.w3.org/ns/widgets"  xmlns:gap="http://phonegap.com/ns/1.0">
    <name>위플레이</name>
    <description>	
        위플레이
    </description>
    <author email="barun5458@naver.com" href="http://www.weplays.co.kr/">
        Weplay Team
    </author>
	<preference name="AutoHideSplashScreen" value="false" />
	<preference name="SplashScreenDelay" value="10000" />
	<preference name="android-minSdkVersion" value="15" />
	<preference name="fullscreen" value="true" />

	<gap:plugin name="cordova-plugin-whitelist" source="npm" />
	<gap:plugin name="cordova-plugin-inappbrowser" source="npm"  />
	<splash src="splash.jpg" />

	<allow-navigation href="*" />
	<icon src="icon.png" />
	<content src="index.html" />
	<access origin="*" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="sms:*" />
	<allow-intent href="tel:*" />
</widget>